<Window x:Class="Presentation.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.Windows"
        xmlns:viewmodels="clr-namespace:Presentation.ViewModels"
        mc:Ignorable="d"
        Title="Crypto Exchange" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Logout" Command="{Binding LogoutCommand}"/>
                <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Balances List -->
            <GroupBox Grid.Column="0" Header="My Balances" Margin="0,0,5,0">
                <DataGrid ItemsSource="{Binding NonZeroBalances}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Cryptocurrency" Binding="{Binding Cryptocurrency.Name}" Width="*"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=N8}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Transfer Section -->
            <GroupBox Grid.Column="1" Header="Send Cryptocurrency" Margin="5,0,0,0">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- From Balance -->
                    <TextBlock Grid.Row="0" Text="From Balance:" Margin="0,5"/>
                    <ComboBox Grid.Row="1" 
                              ItemsSource="{Binding NonZeroBalances}"
                              SelectedItem="{Binding SelectedFromBalance}"
                              DisplayMemberPath="Cryptocurrency.Name"
                              Margin="0,5"/>

                    <!-- To User -->
                    <TextBlock Grid.Row="2" Text="To User:" Margin="0,5"/>
                    <ComboBox Grid.Row="3" 
                              ItemsSource="{Binding OtherUsers}"
                              SelectedItem="{Binding SelectedToUser}"
                              DisplayMemberPath="Username"
                              Margin="0,5"/>

                    <!-- Amount -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Amount:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Text="{Binding TransferAmount, StringFormat=N8}" 
                                 Width="100"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Send Button -->
                    <Button Grid.Row="5" 
                            Content="Send" 
                            Command="{Binding SendCommand}"
                            VerticalAlignment="Top"
                            Margin="0,10"
                            Height="30"/>

                    <!-- Error Message -->
                    <TextBlock Grid.Row="5" 
                               Text="{Binding ErrorMessage}"
                               Foreground="Red"
                               TextWrapping="Wrap"
                               VerticalAlignment="Bottom"
                               Margin="0,5"/>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window> 